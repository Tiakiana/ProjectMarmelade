<Window x:Class="ProjectJam.AssetInventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectJam"
        mc:Ignorable="d"
        Title="AssetInventory" Height="230" Width="370">
    <Grid>
        <Label x:Name="assetInventoryLabel" Content="Asset inventory" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="95,10,0,0" FontSize="26.667"/>
        <Button x:Name="completedMaintenanceButton" Content="Completed maintenance" HorizontalAlignment="Left" Margin="206,125,0,0" VerticalAlignment="Top" Width="145" Height="35" Click="completedMaintenanceButton_Click"/>
        <Button x:Name="planMaintenanceButton" Content="Plan maintenance" HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Margin="206,75,0,0" Height="35" Click="planMaintenanceButton_Click"/>
        <Button x:Name="assetInformationButton" Content="Asset information" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Width="145" Height="35" Click="assetInformationButton_Click"/>
        <Button x:Name="newAssetButton" Content="New asset" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" Width="145" Height="35" Click="newAssetButton_Click"/>

    </Grid>
</Window>
