<Window x:Class="ProjectJam.AssetInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectJam"
        mc:Ignorable="d"
        Title="AssetInformation" Height="300" Width="300">
    <Grid>
        <Label x:Name="assetLabel" Content="Asset: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,43,0,0"/>
        <ComboBox x:Name="assetComboBox" HorizontalAlignment="Left" Margin="70,47,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="showButton" Content="Show" HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top" Width="75" Click="showButton_Click"/>
        <ListBox x:Name="assetInformationListBox" HorizontalAlignment="Left" Height="155" Margin="125,90,0,0" VerticalAlignment="Top" Width="145"/>
        <Label x:Name="assetInformationTitleLabel" Content="Asset information" HorizontalAlignment="Left" Margin="70,6,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="backButton" Content="Back" HorizontalAlignment="Left" Margin="10,225,0,0" VerticalAlignment="Top" Width="50" Click="backButton_Click"/>

    </Grid>
</Window>
